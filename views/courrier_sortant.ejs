                                    <script>
			var app = new Vue({
				el: "#app",
				data() {
					return {
						// statut d'affichage des courriers
						editedItem: {
							objet: null,
							contenu: null,
                            categorie: null,
                            destination: null
						},
						token: null,
						courriers: [],
						files: null,
						image: '',
						alert: null
					};
				},
				methods: {
					sendCourrier(id) {
						this.envoi.courrier = id
					},
					createImage(file) {
						var image = new Image()
						var reader = new FileReader()
						var vm = this
						reader.onload = (e) => {
							vm.image = e.target.result
						}
						reader.readAsDataURL(file)
					},
					removeImage: function(e) {
						this.image = ''
					},
					onChangeFile(e) {
					  let files = e.target.files || e.dataTransfer.files
					  this.createImage(files[0])
					  this.files = files[0]
					},
					add() {
						//let contenu = document.getElementById('contenu')
						//console.log(this.editedItem)
							this.editedItem.contenu = this.files
						CourrielService.ajoutCourrierSortant(this.editedItem, this.token)
						.then((res) => {
							this.courriers.push(res.data)
							this.alert = new Alert().flash(
								'success',
								true,
								'Ajouté avec succès !'
						)
						}).catch((err) => {
							this.alert = new Alert().flash(
								'error',
								true,
								"Erreur d'ajout"
						)
							console.log(err)
						});
					},
					inititalize() {
						CourrielService.listeCourrierSortant(this.token)
						.then((res) => {
							this.courriers = res.data
							// les destinataires pour cet utilisateur
						}).catch((err) => {
							console.log(err)
						});
					},
					// liste des courriers envoyés
					normalizeStr(str) {
						if(str.length > 22) {
							return str.substring(0, 23) + '...'
						}
						return str
					},
				},
				created() {
					let store = JSON.parse(localStorage.getItem('token'))
					if(store == null || store == undefined) {
						return window.location.href = '/'
					}
					this.token = store.token
					this.inititalize()
				},
			})
		 </script>
