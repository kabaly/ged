	<%-include('./component/script')%>

	<script>
		const app = new Vue({
			el: "#app",
			data: {
				editedItem:{
					nom: '',
				},
                defaultItem:{
					nom: '',
				},
                types:[],
				alert:null
			},
			beforeCreate(){
			},
			created(){
				if(JSON.parse(localStorage.getItem('token'))==null){
					//window.location="/"
				}
				this.initialize()
			},
			methods : {
                initialize(){
					new ApiService().findAll('/typehabilitation/crud/')
					.then( res => {
                        this.types=res.data.reverse()
					})
					.catch(error =>{
						console.log(error);
					})
				},
				close () {
					this.$nextTick(() => {
					this.editedItem = Object.assign({}, this.defaultItem)
					this.editedIndex = -1
					})
      				},
					editItem (item) {
						console.log("lancer");
						this.editedIndex = this.types.indexOf(item)
						this.editedItem = Object.assign({}, item)
					},
					addType(){
						if(new Alert().validateRequestData(this.editedItem)){
							new ApiService().add('/typehabilitation/crud/', this.editedItem)
							.then( res => {
								this.initialize()
								this.alert = new Alert().flash(
										'success',
										true,
										"Type d'habilitation ajouté avec succès !"
								)
							})
							.catch(error =>{
								console.log(error);
								this.alert = new Alert().flash(
										'danger',
										true,
										"erreur d'ajout !"
									)
							})
						}else{
							this.alert = new Alert().flash('error', true, 'Tous les champs sont obligatoires')
						}
					

					},
					updateType(){
						if(new Alert().validateRequestData(this.editedItem)){
							new ApiService().update('/typehabilitation/crud/', this.editedItem,this.editedItem.id)
					.then( res => {
                        this.initialize()
						this.alert = new Alert().flash(
								'success',
								true,
								'Modification effectuée !'
						)
					})
					.catch(error =>{
						console.log(error);
						this.alert = new Alert().flash(
								'danger',
								true,
								"erreur de modification !"
							)
					})
						}else{
							this.alert = new Alert().flash('error', true, 'Tous les champs sont obligatoires')
						}
					
					},
					deleteType(){
					new ApiService().delete('/typehabilitation/crud/',this.editedItem.id)
					.then( res => {
                        this.initialize()
						this.alert = new Alert().flash(
								'success',
								true,
								'Suppression effectué !'
						)
					})
					.catch(error =>{
						console.log(error);
						this.alert = new Alert().flash(
								'danger',
								true,
								"erreur de suppression !"
							)
					})
						this.close();
					},
					save(){
							if(this.editedIndex>-1){
									this.updateType()
								}else{
									this.addType()
								}
								this.close()
					}
			}
		})
	</script>
